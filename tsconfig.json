{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES5",
    "outDir": "../build/",
    "removeComments": true,
    "sourceMap": true,
    "watch": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "strict": true,
    "lib": ["es2021", "DOM"],
    "paths": {
      "types/*": ["types/*"],
      "model/*": ["model/*"],
      "services/*": ["services/*"],
      "controller/*": ["controller/*"]
    }
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules", "webpack"],
  "include": ["./src/"]
}
